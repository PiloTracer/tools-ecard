# API Server Environment Variables
# Copy this file to .env and adjust values

# Database URL for Prisma
DATABASE_URL=postgresql://ecards_user:ecards_dev_password@postgres:5432/ecards_db

# PostgreSQL Configuration (for direct access if needed)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ecards_db
POSTGRES_USER=ecards_user
POSTGRES_PASSWORD=ecards_dev_password

# Application Port
PORT=4000

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRY=7d