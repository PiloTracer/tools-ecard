FROM node:20-alpine

WORKDIR /app

# Install OpenSSL for Prisma
RUN apk add --no-cache openssl libc6-compat

# Copy package files only (for layer caching)
COPY package.json ./

# Install dependencies
RUN npm install

# Note: Source code is mounted as volume for hot-reload
# No COPY of source code in dev mode

EXPOSE 4000

# Development with tsx watch for hot-reload
CMD ["npm", "run", "dev"]
