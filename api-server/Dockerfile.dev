FROM node:20-alpine

WORKDIR /app

# Install OpenSSL for Prisma and build dependencies for canvas
# Install libev for Cassandra driver Python 3.12 compatibility
RUN apk add --no-cache \
    openssl \
    libc6-compat \
    python3 \
    python3-dev \
    py3-pip \
    make \
    g++ \
    cairo-dev \
    pango-dev \
    jpeg-dev \
    giflib-dev \
    pixman-dev \
    libev-dev

# Copy package files only (for layer caching)
COPY package.json ./

# Install dependencies
RUN npm install

# Copy Python requirements and install dependencies
COPY batch-parsing/requirements.txt ./batch-parsing/
RUN pip3 install --no-cache-dir --break-system-packages -r ./batch-parsing/requirements.txt

# Note: Source code is mounted as volume for hot-reload
# No COPY of source code in dev mode

EXPOSE 4000

# Development with tsx watch for hot-reload
CMD ["npm", "run", "dev"]
