FROM node:20-alpine

# Install canvas dependencies
RUN apk add --no-cache \
    build-base \
    cairo-dev \
    jpeg-dev \
    pango-dev \
    giflib-dev \
    pixman-dev

WORKDIR /app

# Copy package files only (for layer caching)
COPY package.json ./

# Install dependencies
RUN npm install

# Note: Source code is mounted as volume for hot-reload
# No COPY of source code in dev mode

# Development with tsx watch for hot-reload
CMD ["npm", "run", "dev"]
